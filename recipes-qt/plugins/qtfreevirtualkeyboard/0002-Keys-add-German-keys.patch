Subject: [PATCH 2/3] Keys: add German keys
MIME-Version: 1.0
Content-Type: text/plain; charset=UTF-8
Content-Transfer-Encoding: 8bit

Signed-off-by: Stefan Müller-Klieser <s.mueller-klieser@phytec.de>
---
 src/InputPanel.qml | 6 +++---
 src/KeyModel.qml   | 3 +++
 2 files changed, 6 insertions(+), 3 deletions(-)

diff --git a/src/InputPanel.qml b/src/InputPanel.qml
index 7a9ea61..c02de82 100644
--- a/src/InputPanel.qml
+++ b/src/InputPanel.qml
@@ -180,8 +180,8 @@ Item {
                 KeyButton {
                     width: pimpl.buttonWidth
                     height: pimpl.rowHeight
-                    text: ","
-                    onClicked: InputEngine.sendKeyToFocusItem(text)
+                    text: pimpl.symbolModifier ? ";" :","
+                    //onClicked: InputEngine.sendKeyToFocusItem(text)
                     inputPanel: root
                 }
                 KeyButton {
@@ -195,7 +195,7 @@ Item {
                 KeyButton {
                     width: pimpl.buttonWidth
                     height: pimpl.rowHeight
-                    text: "."
+                    text: pimpl.symbolModifier ? ":" :"."
                     inputPanel: root
                 }
                 KeyButton {
diff --git a/src/KeyModel.qml b/src/KeyModel.qml
index af4890c..5cc461b 100644
--- a/src/KeyModel.qml
+++ b/src/KeyModel.qml
@@ -23,6 +23,7 @@ Item {
         ListElement { letter: "i"; firstSymbol: "8"}
         ListElement { letter: "o"; firstSymbol: "9"}
         ListElement { letter: "p"; firstSymbol: "0"}
+        ListElement { letter: "ü"; firstSymbol: "="}
     }
     ListModel {
         id:second
@@ -35,6 +36,7 @@ Item {
         ListElement { letter: "j"; firstSymbol: "*"}
         ListElement { letter: "k"; firstSymbol: "?"}
         ListElement { letter: "l"; firstSymbol: "/"}
+        ListElement { letter: "ä"; firstSymbol: "~"}
     }
     ListModel {
         id:third
@@ -45,5 +47,6 @@ Item {
         ListElement { letter: "b"; firstSymbol: ")"}
         ListElement { letter: "n"; firstSymbol: "-"}
         ListElement { letter: "m"; firstSymbol: "+"}
+        ListElement { letter: "ö"; firstSymbol: "\\"}
     }
 }
